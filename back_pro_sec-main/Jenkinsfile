pipeline {
    agent any
  environment {
        REMOTE_HOST = '50.16.85.89'
        REMOTE_USER = 'ec2-user'
        SSH_CREDENTIALS = credentials('YOUR_SSH_CREDENTIALS_ID')

    }
    stages {
        stage('Install dependencies backend') {
            steps {
                sh 'npm install --prefix back_pro_sec-main'
            }
        }

        stage('Build backend ') {
            steps {
                sh 'npm run build --prefix back_pro_sec-main'
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                script {
                    dir('front_proj_sec1-main') {
                        sh 'rm -rf node_modules'
                        sh 'npm cache clean --force'
                        sh 'npm install'
                    }
                }
            }
        }
        
        stage('build frontend') {
            steps {
                dir('front_proj_sec1-main') {
                    sh 'npm run build'
                    }
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    def sshCreds = credentials('YOUR_SSH_CREDENTIALS_ID')

                    // Copy node_modules folder to EC2
                    sh 'ls'
                    sh "scp -i ${SSH_CREDENTIALS} -r ./* ${env.REMOTE_USER}@${env.REMOTE_HOST}:~/"

                    // SSH into EC2 and start the application
                    sshCommand remote: [
                        host: env.REMOTE_HOST,
                        user: env.REMOTE_USER,
                        credentialsId: 'YOUR_SSH_CREDENTIALS_ID'
                    ], command: '''
                        cd ~/back_pro_sec-main
                        npm run build
                        npm start
                    '''
                }
            }
        }        
    }
}
